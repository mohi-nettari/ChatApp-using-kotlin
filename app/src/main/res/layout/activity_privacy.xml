<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/drop_shape"

        >


        <TextView
            android:id="@+id/getstartedreg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/robotoblack"
            android:gravity="start"
            android:text="Privacy"
            android:textColor="@color/white"
            android:textSize="20sp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/getstartedreg"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="00dp"
            android:fontFamily="@font/robotolight"
            android:gravity="start"
            android:text="Change your password"
            android:textColor="@color/white"
            android:textSize="17sp"


            />



    </RelativeLayout>


    <LinearLayout
        android:id="@+id/login_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="Password"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/getstartedlogin"
            android:textSize="16sp"
            android:gravity="start"
            android:fontFamily="@font/robotolight"
            android:layout_centerVertical="true"/>


        <EditText
            android:id="@+id/passet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:drawableStart="@drawable/ic_key_24"
            android:drawablePadding="12dp"
            android:ems="10"
            android:textColorHint="@color/lightgrey"
            android:hint="Enter Your Email..."
            android:inputType="text"
            android:padding="20dp"
            android:fontFamily="@font/robotolight"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="Password"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/getstartedlogin"
            android:textSize="16sp"
            android:gravity="start"
            android:fontFamily="@font/robotolight"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/passet2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:drawableStart="@drawable/ic_key_24"
            android:drawablePadding="12dp"
            android:ems="10"
            android:textColorHint="@color/lightgrey"
            android:hint="Enter Your Password..."
            android:inputType="text"
            android:padding="20dp"

            android:fontFamily="@font/robotolight"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />



    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="2dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"

        />

    <Button
        android:id="@+id/dentchangepass"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="50dp"
        android:layout_toStartOf="@+id/lin2"
        android:background="@drawable/drop_shape_unfilled2"
        android:fontFamily="@font/robotoblack"
        android:text="Back"

        android:textColor="@color/white" />

    <Button
        android:id="@+id/changepass"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="90dp"
        android:layout_toEndOf="@+id/lin2"
        android:background="@drawable/drop_shape"
        android:fontFamily="@font/robotoblack"
        android:text="Chang pass"
        android:textColor="@color/white" />


</RelativeLayout>