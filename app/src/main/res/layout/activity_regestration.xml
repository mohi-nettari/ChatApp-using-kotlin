<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/drop_shape"

        >


        <TextView
            android:id="@+id/getstartedlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/robotoblack"
            android:gravity="start"
            android:text="Let's Get Started"
            android:textColor="@color/white"
            android:textSize="20sp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/getstartedlogin"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="00dp"
            android:fontFamily="@font/robotolight"
            android:gravity="start"
            android:text="Create an account"
            android:textColor="@color/white"
            android:textSize="17sp"


            />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/login_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/getstartedlogin"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/robotolight"
            android:gravity="start"
            android:text="Name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/regester_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:drawablePadding="12dp"
            android:ems="10"
            android:fontFamily="@font/robotolight"
            android:hint="Enter Your Name..."
            android:inputType="textEmailAddress"
            android:padding="20dp"
            android:textColor="@color/white"

            android:textColorHint="@color/lightgrey"
            android:textSize="17sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/getstartedlogin"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/robotolight"
            android:gravity="start"
            android:text="Email"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/regester_email_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:drawablePadding="12dp"
            android:ems="10"
            android:fontFamily="@font/robotolight"
            android:hint="Enter Your Email..."
            android:inputType="textEmailAddress"
            android:padding="20dp"
            android:textColor="@color/white"

            android:textColorHint="@color/lightgrey"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/getstartedlogin"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/robotolight"
            android:gravity="start"
            android:text="Password"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/regester_pass_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:drawableStart="@drawable/ic_key_24"
            android:drawablePadding="12dp"
            android:ems="10"
            android:fontFamily="@font/robotolight"
            android:hint="Enter Your Password..."
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/lightgrey"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/getstartedlogin"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/robotolight"
            android:gravity="start"
            android:text="Password"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/regester_pass_et2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:drawableStart="@drawable/ic_key_24"
            android:drawablePadding="12dp"
            android:ems="10"
            android:fontFamily="@font/robotolight"
            android:hint="ReEnter Your Password..."
            android:inputType="textPassword"
            android:padding="20dp"
            android:textColor="@color/white"
            android:textColorHint="@color/lightgrey"
            android:textSize="17sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="2dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"

        />

    <Button
        android:id="@+id/btnsigninreg"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/lin"
        android:background="@drawable/drop_shape_unfilled2"
        android:fontFamily="@font/robotoblack"
        android:text="Signin"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnsignupreg"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="40dp"
        android:layout_toEndOf="@+id/lin"
        android:background="@drawable/drop_shape"
        android:fontFamily="@font/robotoblack"
        android:text="Signup"
        android:textColor="@color/white" />



</RelativeLayout>